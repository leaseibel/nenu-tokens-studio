{
  "typography": {
    "text-area": {
      "label": {
        "value": "{typography.body.s.bold}",
        "type": "typography"
      },
      "placeholder": {
        "value": "{typography.body.s.regular}",
        "type": "typography"
      },
      "caption": {
        "value": "{typography.caption}",
        "type": "typography"
      }
    }
  },
  "color": {
    "text-area": {
      "bg": {
        "error": {
          "value": "{color.error-surface.bg-minimal}",
          "type": "color"
        },
        "default": {
          "value": "{color.neutral-hard-surface.elevation-sunken}",
          "type": "color"
        },
        "hover": {
          "value": "{color.neutral-hard-surface.elevation-sunken}",
          "type": "color",
          "$extensions": {
            "studio.tokens": {
              "modify": {
                "type": "mix",
                "value": "0.05",
                "space": "lch",
                "color": "{color.neutral-hard-surface.fg}"
              }
            }
          }
        },
        "pressed": {
          "value": "{color.neutral-hard-surface.elevation-sunken}",
          "type": "color",
          "$extensions": {
            "studio.tokens": {
              "modify": {
                "type": "mix",
                "value": "0.1",
                "space": "lch",
                "color": "{color.neutral-hard-surface.fg}"
              }
            }
          }
        }
      },
      "border": {
        "focus-default": {
          "value": "{color.neutral-hard-surface.fg-clickable}",
          "type": "color",
          "$extensions": {
            "studio.tokens": {
              "modify": {
                "type": "mix",
                "value": "0.3",
                "space": "lch",
                "color": "{color.neutral-hard-surface.bg}"
              }
            }
          }
        },
        "focus-error": {
          "value": "{color.error-surface.border-on-minimal}",
          "type": "color"
        }
      },
      "fg": {
        "caption-default": {
          "value": "{color.neutral-hard-surface.fg}",
          "type": "color"
        },
        "caption-error": {
          "value": "{color.error-surface.bg}",
          "type": "color"
        },
        "placeholder": {
          "value": "{color.neutral-hard-surface.fg-minimal}",
          "type": "color"
        },
        "characters": {
          "value": "{color.neutral-hard-surface.fg-minimal}",
          "type": "color"
        },
        "text-value": {
          "value": "{color.neutral-hard-surface.fg}",
          "type": "color"
        },
        "label": {
          "value": "{color.neutral-hard-surface.fg}",
          "type": "color"
        }
      }
    }
  }
}